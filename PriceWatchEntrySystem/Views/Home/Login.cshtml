
@{
    ViewBag.Title = "Login";
}
@using PriceWatchEntrySystem.Models;
@model LoginViewModel


@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "myform", enctype = "multiport/form-data" }))
{
    <div class="container d-flex h-100 align-items-center justify-content-center">

        <div class="row align-self-center w-100 my-4">
            <div class="col-7 mx-auto">
                <div class="bg-light rounded">
                    <h1 class="display-6 text-truncate text-center">Welcome to the </h1>
                    <h1 class="display-4 text-truncate text-center">Price Watch System!</h1>
                    <div class="col-lg-4 col-lg-offset-4 mb-2" style="margin: 0 auto; float: none;">
                        <label for="loginusername" class="form-label mt-auto">Login Account</label>.
                        @Html.TextBoxFor(m => m.Username, new { @type = "text", @class = "form-control", @id = "loginusername", @placeholder = "Account" })
                    </div>

                    <div class="col-lg-4 col-lg-offset-4 mb-2" style="margin: 0 auto; float: none;">
                        <label for="loginpassword" class="form-label mt-auto">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @id = "loginpassword", @placeholder = "Password" })
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Login" class="btn rounded-pill btn-info rounded mb-3">
                    </div>
                    <div class="text-end mx-2">
                        <button class="btn rounded-pill  btn-success mb-3">Don't have an account? Create one!</button>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>
}
