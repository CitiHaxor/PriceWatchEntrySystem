@{ 
    var controllerName = string.Empty;
    object controllerObj;
    var actionName = string.Empty;
    object actionObj;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Price Watch Data Entry System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 0px;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Price Watch Data Entry System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DataVisualization", "Home")">Data Visualization Tool</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DataEntry", "Home")">Data Entry</a>
                    </li>
                </ul>
               
                <form class="d-flex">
                    @if (ViewContext.RouteData.Values["action"].ToString() == "Logout")
                    {
                        <a class="btn btn-secondary my-2 my-sm-0" control-id="ControlID-2" href="@Url.Action("Login", "Home")">Login</a>
                    }
                    else if (ViewContext.RouteData.Values["action"].ToString() == "Login")
                    {
                        <a class="btn btn-secondary my-2 my-sm-0" control-id="ControlID-2" href="@Url.Action("Login", "Home")">Login</a>
                    }
                    else
                    {
                    <a class="btn btn-secondary my-2 my-sm-0" control-id="ControlID-2" href="@Url.Action("Logout", "Home")">Logout</a>
                    }
                </form>
            </div>
        </div>
    </nav>
    @RenderBody()
    <nav class="navbar navbar-expand-lg navbar-dark bg-light">
        <div class="container-fluid">
            <label class=""><strong>CityHaxor</strong></label>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

